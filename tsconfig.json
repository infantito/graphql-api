{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "build",
    "paths": {
      "@/*": ["src/*"],
      "utils/*": ["utils/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018"
  },
  "exclude": ["node_modules", "babel.config.js"],
  "ts-node": {
    "transpileOnly": true,
    "scriptMode": true
  }
}
